<Window x:Class="WayGuideManager.Views.Shell"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WayGuideManager.Views"
        xmlns:prism="http://prismlibrary.com/"
        mc:Ignorable="d"
        xmlns:const="clr-namespace:WayGuideManager.Helpers"
        xmlns="http://schemas.microsoft.com/netfx/2009/xaml/presentation" 
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="SMARTNAV Manager" Height="450" Width="800" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Window.Resources></Window.Resources>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding ShellLoadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <ContentControl prism:RegionManager.RegionName="{x:Static const:RegionNames.MainAppRegion}" />

    </Grid>
</Window>
